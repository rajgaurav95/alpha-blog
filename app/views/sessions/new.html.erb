<h1 class="text-center mt-4">Login</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    
      <%= form_with(scope: :session ,url:login_path  ,class:"shadow p-3 mb-3 bg-info rounded" ,local: true) do |f| %>

          <div class="mb-3 row">
            <%= f.label :email , class:"col-sm-2 col-form-label text-light" %>
            <div class="col-sm-10">
              <%= f.email_field :email  , class: "form-control shadow rounded",placeholder:"Enter a email address" %>
            </div>
          </div>

        
          <div class="mb-3 row">
          <%= f.label :password , class:"col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.password_field :password  , class: "form-control shadow rounded",placeholder:"Enter your password" %>
          </div>
        </div>
      


        <div class="d-grid gap-2 col-3 mx-auto  ">
          <%=f.submit 'Log in' ,class:"btn btn-outline-light btn-lg"%> 
        </div>
        <% end %>

      </div >
      <div class="mb-3">
      <%= link_to '[Cancel and Return to articles listing]' ,  articles_path,class:"d-grid gap-2 col-3 mx-auto text-info " %>
      </div>
  </div>
</div>

